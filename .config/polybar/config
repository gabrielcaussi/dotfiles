[module/polywins]
type = custom/script
exec = ~/.config/polybar/scripts/polywins.sh 2>/dev/null
format = <label>
format-background = ${colors.alt-bg}
label = %output%
label-padding = 0
tail = true

[module/space]
type = custom/text
content = " "

[module/round-left]
type = custom/text
content = %{T3}%{T-}
content-foreground = ${colors.alt-bg}

[module/round-right]
type = custom/text
content = %{T3}%{T-}
content-foreground = ${colors.alt-bg}

[module/temperature]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/pci0000:00/0000:00:08.1/0000:06:00.0/hwmon/hwmon0/temp1_input
warn-temperature = 70
interval = 10

format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-padding = 0
label = %temperature%
label-warn = %temperature%
ramp-0 =  "󰜗" 
ramp-font = 3
format-background = ${colors.alt-bg}
format-foreground = ${colors.cyan}

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = true
enable-click = true
enable-scroll = true
reverse-scroll = false

format = <label-state>

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;

label-separator = " "
label-separator-background = ${colors.alt-bg}

label-focused = %icon%  
label-focused-foreground = ${colors.red}
label-focused-padding = 1
label-focused-background = ${colors.alt-bg}
label-focused-margin = 0 

label-occupied = %icon%  
label-occupied-foreground = ${colors.white}  
label-occupied-background = ${colors.alt-bg}
label-occupied-padding = 1
label-occupied-margin = 0 

label-empty = %icon%
label-empty-foreground = ${colors.alt-bg1}
label-empty-padding = 1
label-empty-background = #2a2e36
label-empty-margin = 0 

label-urgent = %icon%
label-urgent-foreground = #88C0D0
label-urgent-background = #2a2e36
label-urgent-padding = 1


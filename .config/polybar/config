[module/time]
type = internal/date
interval = 60

format = <label>
format-background = ${colors.alt-bg}
format-foreground = ${colors.white}

date = 󰥔 %H:%M%
time-alt = 󰃭 %A, %B %d%

label = %date%%time%

[module/mem]
type = custom/script
exec = free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p'
format = %{T2}﬙ %{T-}<label>
format-background = ${colors.alt-bg}
format-foreground = ${colors.yellow}
label = %output% MB
label-background = ${colors.alt-bg}
label-foreground = ${colors.yellow}

[module/updates]
type = custom/script
exec = $HOME/.config/polybar/scripts/updates.sh
format = <label>
interval = 4600 
label = %{T6} %{T-}%output%'updates
label-background = ${colors.alt-bg}
label-foreground = ${colors.red}
tail = true

[module/powermenu]
type = custom/text 
content = 
content-padding = 1
click-left = sh $HOME/.config/rofi/launch.sh powermenu
content-foreground = ${colors.red}

[module/wlan]
type = internal/network
interface = enp4s0
interval = 3.0
format-connected =  <label-connected>
label-connected = "󰤨 Nawfside" 
label-connected-background = ${colors.alt-bg}
label-connected-foreground = ${colors.green} 

[module/cpu]
type = internal/cpu
interval = 2.5

format-prefix = %{T2} %{T-} 
format = <label> 

label = CPU %percentage%%
format-background = ${colors.alt-bg}
format-foreground = ${colors.purple}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...

[module/spotify]
type = custom/script

interval = 1

exec = python ~/.config/polybar/scripts/getSpotifyStatus.py -f '{artist} ~ {song}' -t 50

format = '<label>
format-background = ${colors.alt-bg}
format-foreground = ${colors.green}

click-left = playerctl -p spotify play-pause
click-right = bspc desktop -f '^4'

scroll-up = playerctl -p spotify next
scroll-down = playerctl -p spotify previous

